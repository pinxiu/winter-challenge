<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <h3 class="intro-count">
                            <%= @winner[0] %>:
                            <%= @winner[1] %>
                        </h3>

                        <% @points.each do |team| %>
                            <h4 class="intro-count">
                                <%= team[0] %>: 
                                <%= team[1] %>
                            </h4>   

                        <% end %>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->

<div class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">The Challenge</h2>
                <p class="lead">This winter break, let's stir up one another to love and good works with some friendly competition! Complete various 'Christmas Challenges' to grow, serve others, and equip yourself, and compete with teams along the way! The team with the highest number of points by the last weekend of winter break will get to enjoy a delicious potluck dinner courtesy of the losing teams.</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
            	<hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Rules</h2>
                <ul class="lead">
                	<li>
                		Completed a challenge? Great! Make your points count by logging it on this website!
                	</li>
                    <li>
                        Upload a photo or video, if possible!
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

<div class="content-section-b">
    <div class="container">
        <div class="row">
            <hr class="section-heading-spacer">
            <div class="clearfix"></div>
            <h2>Log Completed Challenge</h2>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <%= form_for @comment, :html => {:role => 'form'} do |f| %>

                    <div class="col-lg-6">
                        <%= render 'shared/error_messages' %>
                        <div class="form-group">
                            <%= f.label :name, "Name (first and last)" %>
                            <%= f.text_field :name, { :class => "form-control"} %>
                        </div>

                        <div class="form-group">
                            <%= f.label :team %>
                            <%= f.select :team, options_for_select(["A2F","Klesis","MakeNew"]), {:prompt => 'Select Team'}, { :class => "form-control" } %>
                        </div>
                        <div class="form-group">
                            <%= f.label :content, "Blurb" %>
                            <%= f.text_area :content, { :class => "form-control", rows: "5"} %>
                        </div>
                    </div>
                

                    <div class="col-lg-6">
                        <div class="form-group">
                            <%= f.label :mission_id, "Challenge" %>

                            <select class="form-control" name="comment[mission_id]" id="comment_mission_id">
                                <option value>Select Challenge</option>
                                <optgroup label="Spiritual Growth">Spiritual Growth
                                    <% @sg.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Evangelism">Evangelism
                                    <% @evangelism.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Service/Gratitude">Service/Gratitude
                                    <% @ser.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Equipping">Equipping
                                    <% @eq.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                            </select>
                        </div>

                        <div class="form-group">
                            <%= f.label :avatar, "Upload a Picture (+5 points)" %>
                            <%= f.file_field :avatar, { :class => "form-control"} %>
                        </div>

                        <div class="form-group">
                            <%= f.label :video, "Upload a Video (+10 points)" %>
                            <%= f.file_field :video, { :class => "form-control"} %>
                        </div>
                    </div>

                    <%= f.submit "Submit my post", class: "btn btn-primary btn-lg btn-block" %>
                <% end %>
            </div>
        </div>
    </div>  
</div>


<div class="content-section-a">

</div>

