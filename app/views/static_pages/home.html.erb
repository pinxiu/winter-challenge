<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>2018 Soph Winter Challenge</h1>
                    <hr>
                    <ul class="list-inline intro-social-buttons">
                        <h3 class="winner">
                            <%= @winner[0] %>:
                            <%= @winner[1] %>
                        </h3>

                        <% @points.each do |team| %>
                            <h4 class="intro-count">
                                <%= team[0] %>: 
                                <%= team[1] %>
                            </h4>   
                        <% end %>
                    </ul>
                    <hr>
                    <h3 class="intro-count"><i>"Look carefully then how you walk, not as unwise but as wise, making the best use of the time, because the days are evil." Ephesians 5:15-16</i></h3>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

