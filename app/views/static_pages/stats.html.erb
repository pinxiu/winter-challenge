<div class="content-section-b">
    <div class="container">
        <div class="row">
            <div class ="col-lg-4">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Stats</h2>
                
<svg class="chart" width="1200" height="500" aria-labelledby="title desc" role="img">
  <title id="title">Winning Team</title>
  <desc id="desc">Brothers, Sisters</desc>
  <g class="bar">
    <rect width="<%= @oneStat %>" height="99"></rect>
    <text x="<%= @barOne %>" y="49.5" dy=".35em">Brothers - <%= @oneSum %></text>
  </g>
  <g class="bar-winner">
    <rect width="<%= @twoStat %>" height="99" y="100"></rect>
    <text x="<%= @barTwo %>" y="149" dy=".35em">Sisters - <%= @twoSum %></text>
  </g>
</svg>
            </div>
        </div>
    </div>
</div>

