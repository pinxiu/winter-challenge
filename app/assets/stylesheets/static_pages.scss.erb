.flash {
    position: absolute;
    z-index: 100;
    top: 50px;
    width: 100%;
}

.bar {
  fill: black; /* changes the background */
  height: 21px;
  transition: fill .3s ease;
  cursor: pointer;
  font-family: "Montserrat", Helvetica, sans-serif;
}
.bar text {
  color: black;
}
.bar:hover,
.bar:focus {
  fill: red;
}
.bar:hover text,
.bar:focus text {
  fill: red;
}

.bar-winner {
  fill: red; /* changes the background */
  height: 21px;
  transition: fill .3s ease;
  cursor: pointer;
  font-family: "Montserrat", Helvetica, sans-serif;
}